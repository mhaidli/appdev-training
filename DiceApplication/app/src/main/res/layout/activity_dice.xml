<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DiceActivity"
    android:id="@+id/relativeLayout">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Randomize Dice!"
        android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dice 1"
        android:id="@+id/Dice1"
        android:textSize="32dp"
        android:layout_alignTop="@+id/Dice2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dice 2"
        android:id="@+id/Dice2"
        android:textSize="32dp"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/Addition"
        android:layout_alignStart="@+id/Addition"
        android:layout_marginLeft="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Need Dice]"
        android:id="@+id/Addition"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/Dice2"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Need Dice]"
        android:id="@+id/Multiplication"
        android:layout_marginTop="63dp"
        android:layout_toEndOf="@+id/Double"
        android:layout_below="@+id/Addition"
        android:layout_alignLeft="@+id/Addition"
        android:layout_alignStart="@+id/Addition" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Need Dice]"
        android:id="@+id/Double"
        android:layout_toStartOf="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_marginBottom="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Addition:"
        android:id="@+id/textView2"
        android:layout_above="@+id/Multiplication"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiplication:"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/Multiplication"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Double:"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/Double"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

</RelativeLayout>
